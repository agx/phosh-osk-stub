<?xml version="1.0" encoding="UTF-8"?>
<component type="inputmethod">
  <id>sm.puri.phosh.osk-stub</id>
  <name>Phosh Osk Stub</name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      Phosh-osk-stub is an <em>experimental</em> on screen keyboard with these features:
    </p>
    <ul>
      <li>Character popovers</li>
      <li>Word completion</li>
      <li>Gesture based cursor movement</li>
      <li>Lots of emojis ðŸ˜€</li>
      <li>Debug mode to debug text-input/input-method issues</li>
      <li>More than 30 different layouts</li>
      <li>Configurable short cuts in terminal layout</li>
    </ul>
    <p>
      It acts a Wayland input-method or virtual keyboard.
    </p>
    <p>
      Phosh-osk-stub is still in development. <em>Use with care</em>.
    </p>
  </description>
  <summary>An experimental On Screen Keyboard for Phosh</summary>

  <keywords>
    <keyword>input-method</keyword>
    <keyword>multilingual</keyword>
    <keyword>emoji</keyword>
  </keywords>

  <content_rating type="oars-1.1"/>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <url type="homepage">https://gitlab.gnome.org//guidog/phosh-osk-stub</url>
  <url type="bugtracker">https://gitlab.gnome.org//guidog/phosh-osk-stub</url>

  <screenshots>
    <screenshot type="default">
      <caption>Character Popover</caption>
      <image>https://gitlab.gnome.org//guidog/phosh-osk-stub/-/raw/main/screenshots/pos-popover.png?inline=false</image>
    </screenshot>
    <screenshot type="default">
      <caption>Emoji Layout</caption>
      <image>https://gitlab.gnome.org//guidog/phosh-osk-stub/-/raw/main/screenshots/pos-emoji.png?inline=false</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.30.0" date="2023-08-01">
      <description>
        <ul>
          <li>Allow to prevent automatic keyboard unfole based on app-id</li>
        </ul>
      </description>
    </release>
    <release version="0.28.0" date="2023-05-31">
      <description>
        <ul>
          <li>New input mode that works without lifting the finger</li>
          <li>Add Esc to terminal's captial layer</li>
        </ul>
      </description>
    </release>
    <release version="0.27.0" date="2023-04-30">
      <description>
        <p>This version adds support for two new completion engines</p>
        <ul>
          <li>Allow to select default completer via GSetting or environment variable</li>
          <li>Add typo correction completer using hunspell</li>
          <li>Add Unix pipe like completer</li>
          <li>Some style fixes</li>
        </ul>
      </description>
    </release>
    <release version="0.25.0" date="2023-02-28">
      <description>
        <ul>
          <li>Use maximum width for space bar</li>
          <li>Fit more shortcuts into the shortcuts bar</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
